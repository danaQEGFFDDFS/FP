@model IEnumerable<DataLayer.Entityes.Customers>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>ListCustomers</title>
</head>
<body>
<p>
    <a asp-action="CreateCustom">CreateCustom</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FullName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Phone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Phone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.ActionLink("EditCustom", "EditCustom", new {  id=item.Id}) |
                @Html.ActionLink("Details", "Details", new { id= item.Id}) |
                @Html.ActionLink("Deleteсust", "Deleteсust", new { id=item.Id })
            </td>
        </tr>
}
    </tbody>
</table>
</body>
</html>
